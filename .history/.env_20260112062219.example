# =============================================================================
# TASTEFULLY STAINED - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=change-this-to-a-secure-random-string-in-production

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
BACKEND_PORT=8000
FRONTEND_PORT=3000
API_KEY=

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=tastefully_stained
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/tastefully_stained

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Blockchain Configuration
# -----------------------------------------------------------------------------
# Ethereum RPC URL (use Infura, Alchemy, or local node)
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID
# Private key for signing transactions (WITHOUT 0x prefix)
ETHEREUM_PRIVATE_KEY=your-private-key-here
# Contract addresses (set after deployment)
WATERMARK_REGISTRY_ADDRESS=
CONTENT_TOKEN_ADDRESS=

# -----------------------------------------------------------------------------
# IPFS Configuration
# -----------------------------------------------------------------------------
IPFS_API_URL=http://localhost:5001
IPFS_API_PORT=5001
IPFS_GATEWAY_PORT=8080
IPFS_SWARM_PORT=4001

# -----------------------------------------------------------------------------
# C2PA Configuration
# -----------------------------------------------------------------------------
# Path to signing key (PEM format)
C2PA_SIGNING_KEY_PATH=/app/keys/signing.pem
# Path to certificate chain (PEM format)
C2PA_CERTIFICATE_PATH=/app/keys/certificate.pem
# Claim generator identifier
C2PA_CLAIM_GENERATOR=Tastefully Stained/0.1.0

# -----------------------------------------------------------------------------
# Frontend Configuration (Vite)
# -----------------------------------------------------------------------------
VITE_API_URL=http://localhost:8000
VITE_BLOCKCHAIN_NETWORK=sepolia

# -----------------------------------------------------------------------------
# Monitoring Configuration
# -----------------------------------------------------------------------------
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# -----------------------------------------------------------------------------
# Local Development (Hardhat)
# -----------------------------------------------------------------------------
HARDHAT_PORT=8545
